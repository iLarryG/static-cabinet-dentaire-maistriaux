<div class="wrapper" style="background-image: linear-gradient(135deg, rgba(238, 110, 115, 0) 0%, rgba(51, 51, 51, 0.12) 50%), url('images/colour.png'); background-position: left; background-repeat: no-repeat;">
  <div class="container">
    <div class="row">
      <% data.dentistes.each do |name, details| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-xl-3">
        <div class="card">
          <%= image_tag details.photo, class: "avatar-xlarge" %>
          <div class="card-description">
            <bold>
              <%= name %>
            </bold>
            <p>
              <i><%= details.fonction %></i>
            </p>
            <div class="card-days">
              <% details.jours.each do |day, nothing| %>
              <ul>
                <li><i class="fa fa-check-square-o" aria-hidden="true"></i> <%= day %></li>
              </ul>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
